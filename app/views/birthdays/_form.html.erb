<%= form_for(birthday) do |f| %>
  <% if birthday.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(birthday.errors.count, "error") %> prohibited this birthday from being saved:</h2>

      <ul>
      <% birthday.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name %>
  </div>
  <!-- se añadio la fecha para que leea y se guarde la fecha-->
  <div class="field">
    <%= f.label :date_birthday, 'Fecha cumpleaños' %>
    <%= f.date_select :date_birthday, start_year: 1980 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
