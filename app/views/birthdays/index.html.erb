<p id="notice"><%= notice %></p>

<!--Diseñando el form para el buscador -->
  <%= form_tag(birthdays_path, {method: "GET"}) do %>
    <%= text_field_tag :search, nil, placeholder: "Busqueda de Cumples por nombre" %>
    <%= submit_tag "Buscar cumpleaños" %>
  <% end %>
<h1>Birthdays</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Fecha de Cumpleaños</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @birthdays.each do |birthday| %>
      <tr>
        <td><%= birthday.name %></td>
        <!-- Se añadio la fecha del cumpleaño en la vista -->
        <td><%= birthday.date_birthday.strftime('%d/%m/%Y') if birthday.date_birthday %></td>
        <td><%= link_to 'Show', birthday %></td>
        <td><%= link_to 'Edit', edit_birthday_path(birthday) %></td>
        <td><%= link_to 'Destroy', birthday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @birthdays %>

<br>

<%= link_to 'New Birthday', new_birthday_path %>
